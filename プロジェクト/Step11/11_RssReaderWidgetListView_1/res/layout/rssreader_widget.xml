<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80000000" android:textColor="#ffffff" android:paddingLeft="6dp" android:paddingRight="6dp" android:paddingBottom="12dp" android:paddingTop="12dp" android:text="@string/widget_name" android:textSize="12sp"/>

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

    <TextView
        android:id="@android:id/empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/message_loading" android:textColor="#000000" android:padding="6dp" android:background="#80ffffff"/>

</LinearLayout>